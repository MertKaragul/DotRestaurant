@using DotRestaurant.Utils;

@{
    Layout = "~/Views/Shared/Default/_DefaultLayout.cshtml";
    ViewData["RestaurantSlogan"] = Constans.RESTURANT_SLOGAN;
    ViewData["RestaurantName"] = Constans.RESTURANT_NAME;
}


<div class="hero_area">
    <div class="bg-box">
        <img src="~/Default/images/hero-bg.jpg" alt="">
    </div>
    <!-- header section strats -->
    @await Html.PartialAsync("~/Views/Shared/Default/_DefaultHeader.cshtml")
    <!-- end header section -->
    <!-- slider section -->
    <section class="slider_section ">
        <div id="customCarousel1" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container ">
                        <div class="row">
                            <div class="col-md-7 col-lg-6 ">
                                <div class="detail-box">
                                    <h1>
                                        @ViewData["RestaurantName"]
                                    </h1>
                                    <p>
                                        @ViewData["RestaurantSlogan"]
                                    </p>
                                    <div class="btn-box">
                                        <a href="" class="btn1">
                                            Sipariş ver
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>